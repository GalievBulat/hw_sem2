<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_auth"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/regFragment"
        android:name="com.kakadurf.hw_sem2.presentation.view.fragment.RegFragment"
        android:label="RegFragment">
        <action
            android:id="@+id/action_regFragment_to_activityMain"
            app:destination="@id/activityMain">
            <!-- <argument
                 android:name="userInfo"
                 app:argType="com.kakadurf.hw_sem2.presentation.models.UserInfoDto"
                 app:nullable="false" />-->
        </action>
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.kakadurf.hw_sem2.presentation.view.fragment.AuthFragment"
        android:label="AuthFragment">
        <action
            android:id="@+id/action_authFragment_to_activityMain"
            app:destination="@id/activityMain">
            <!-- <argument
                 android:name="userInfo"
                 app:argType="com.kakadurf.hw_sem2.presentation.models.UserInfoDto"
                 app:nullable="false" />-->
        </action>
        <action
            android:id="@+id/action_authFragment_to_regFragment"
            app:destination="@id/regFragment" />
    </fragment>
    <activity
        android:id="@+id/activityMain"
        android:name="com.kakadurf.hw_sem2.presentation.view.ActivityMain"
        android:label="ActivityMain">
        <argument
            android:name="userInfo"
            app:argType="com.kakadurf.hw_sem2.presentation.models.UserInfoDto"
            app:nullable="false" />
    </activity>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.kakadurf.hw_sem2.presentation.view.fragment.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>